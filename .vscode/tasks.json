{
    "tasks": [
        {
            "type": "shell",
            "label": "Build Engine",
            "windows": {
                "command": "${workspaceFolder}/engine/build.bat"
            },
            "linux": {
                "command": "${workspaceFolder}/engine/build.sh"
            },
            "options": {
                "cwd": "${workspaceFolder}/engine"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "Build Everything",
            "windows": {
                "command": "${workspaceFolder}/build-all.bat",
            },
            "linux": {
                "command": "${workspaceFolder}/build-all.sh",
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Debugging",
            "windows": {
                "command": "${workspaceFolder}/debug.bat",
            },
            "linux": {
                "command": "${workspaceFolder}/debug.sh",
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}